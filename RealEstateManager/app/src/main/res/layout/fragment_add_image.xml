<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/white">

        <EditText
            android:id="@+id/add_picture_fragment_name_picture"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="@string/name_your_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/edit_text_custom_add_picture_fragment"/>

        <ImageView
            android:id="@+id/add_picture_fragment_see_result"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/add_picture_fragment_name_picture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"
            android:scaleType="centerCrop"/>

        <EditText
            android:id="@+id/add_picture_fragment_describe_picture"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/add_picture_fragment_see_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/describe_your_picture"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="35dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/edit_text_custom_add_picture_fragment"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/add_picture_fragment_define_as_first_picture_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_picture"
            android:textAlignment="viewStart"
            android:checked="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_picture_fragment_describe_picture"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_picture_fragment_choose_in_album_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_in_album"
            android:textSize="13sp"
            android:backgroundTint="@color/secondaryLightColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/add_picture_fragment_save_btn"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_picture_fragment_take_picture_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_picture"
            android:textSize="13sp"
            android:backgroundTint="@color/secondaryLightColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/add_picture_fragment_save_btn"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_picture_fragment_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            android:text="@string/save_picture"
            android:textSize="13sp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
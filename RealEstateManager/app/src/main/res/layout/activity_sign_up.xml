<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/sign_up_layout_padding"
    android:background="@drawable/background_login_and_signup_activities"
    tools:context=".ui.authentication.SignUpActivity">

    <EditText
        android:id="@+id/edit_txt_email_agent_authentication"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_txt_sign_up_email_name_password_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/edit_txt_sign_up_email_margin_top"
        android:background="@drawable/edit_text_custom_authentication_activity"
        android:drawableStart="@drawable/ic_email"
        android:drawableTint="@color/primaryLightColor"
        android:drawablePadding="@dimen/edit_txt_sign_up_email_name_password_drawable_padding"
        android:paddingStart="@dimen/edit_txt_sign_up_email_name_password_padding_start"
        android:ems="10"
        android:hint="@string/email"
        android:textSize="@dimen/edit_txt_sign_up_email_name_password_text_size"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edit_txt_password_agent_authentication"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_txt_sign_up_email_name_password_height"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_name_agent_authentication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/edit_txt_sign_up_password_name_margin_top"
        android:background="@drawable/edit_text_custom_authentication_activity"
        android:drawableStart="@drawable/ic_password"
        android:drawableTint="@color/primaryLightColor"
        android:drawablePadding="@dimen/edit_txt_sign_up_email_name_password_drawable_padding"
        android:paddingStart="@dimen/edit_txt_sign_up_email_name_password_padding_start"
        android:ems="10"
        android:hint="@string/password"
        android:textSize="@dimen/edit_txt_sign_up_email_name_password_text_size"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/edit_txt_name_agent_authentication"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_txt_sign_up_email_name_password_height"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_email_agent_authentication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_custom_authentication_activity"
        android:drawableStart="@drawable/ic_person"
        android:drawableTint="@color/primaryLightColor"
        android:drawablePadding="@dimen/edit_txt_sign_up_email_name_password_drawable_padding"
        android:paddingStart="@dimen/edit_txt_sign_up_email_name_password_padding_start"
        android:layout_marginTop="@dimen/edit_txt_sign_up_password_name_margin_top"
        android:ems="10"
        android:hint="@string/name"
        android:textSize="@dimen/edit_txt_sign_up_email_name_password_text_size"
        android:inputType="text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_in_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/material_btn_sign_up_text_size"
        android:text="@string/sign_up"
        android:layout_marginBottom="@dimen/material_btn_sign_up_margin_bottom"
        android:paddingEnd="@dimen/material_btn_login_sign_up_padding_end"
        android:paddingStart="@dimen/material_btn_login_sign_up_padding_start"
        android:shadowColor="@color/primaryDarkColor"
        style="@style/ThemeOverlay.Material3.Button.TonalButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
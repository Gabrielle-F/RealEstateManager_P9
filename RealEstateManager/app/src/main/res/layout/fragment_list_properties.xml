<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/properties_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_property"/>

    <FrameLayout
        android:id="@+id/properties_list_map_container"
        android:layout_width="@dimen/frame_layout_properties_list_map_container_width"
        android:layout_height="@dimen/frame_layout_properties_list_map_container_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/frame_layout_properties_list_map_container_margin_bottom_end"
        android:layout_marginEnd="@dimen/frame_layout_properties_list_map_container_margin_bottom_end"/>


</androidx.constraintlayout.widget.ConstraintLayout>
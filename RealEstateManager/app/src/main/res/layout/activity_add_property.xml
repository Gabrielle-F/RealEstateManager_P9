<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_type_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/add_property_rooms_txtInput"
                    android:hint="@string/type"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_type_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_rooms_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/add_property_type_txtInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="@string/number_of_rooms"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_rooms_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_area_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/add_property_price_txtInput"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_type_txtInput"
                    android:hint="@string/area"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_area_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_price_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_rooms_txtInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/add_property_area_txtInput"
                    android:hint="@string/price"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_price_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_street_number_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_area_txtInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/add_property_street_txtInput"
                    android:hint="@string/street_number"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_street_number_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_street_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintStart_toEndOf="@+id/add_property_street_number_txtInput"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_price_txtInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="@string/street"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_street_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_city_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_street_number_txtInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/add_property_postal_code_txtInput"
                    android:hint="@string/city"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_city_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_postal_code_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_street_txtInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/add_property_city_txtInput"
                    android:hint="@string/postal_code"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_postal_code_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/add_property_cardview_amenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:elevation="5dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/add_property_place_informations">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/school_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/school"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="0"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/restaurants_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/restaurants"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="1"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/playground_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/playground"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="2"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/supermarket_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/supermarket"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="0"/>

                    <CheckBox
                        android:id="@+id/shopping_area_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/shopping_area"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="1"/>

                    <CheckBox
                        android:id="@+id/cinema_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cinema"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="2"/>

                </GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp">

                <TextView
                    android:id="@+id/add_property_txt_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/available_or_sold"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/add_property_switch_sold_or_available"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="30dp"
                    android:textOff="@string/switch_off"
                    android:textOn="@string/switch_on"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/add_property_txt_available" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_property_sold_date_txtInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="100dp"
                    android:hint="@string/sold_date"
                    app:boxStrokeColor="@color/secondaryDarkColor"
                    app:boxStrokeErrorColor="@color/onErrorColor"
                    app:layout_constraintTop_toBottomOf="@id/add_property_switch_sold_or_available"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_property_sold_date_edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_property_add_pictures_material_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_pictures"
                    android:textSize="15sp"
                    app:strokeColor="@color/primaryColor"
                    android:textColor="@color/secondaryDarkColor"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_sold_date_txtInput"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_property_pictures_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_add_pictures_material_btn"
                    app:layout_constraintBottom_toTopOf="@+id/add_property_agent_spinner"
                    tools:listitem="@layout/item_pictures_add_property_activity"/>

                <Spinner
                    android:id="@+id/add_property_agent_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_property_pictures_recycler_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/cancel_add_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/onErrorColor"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/activity_add_fab"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/activity_add_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:backgroundTint="@color/secondaryLightColor"
                    android:text="@string/add_property"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:icon="@drawable/ic_add_property_circle_outline_white"
                    app:iconGravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

</ScrollView>